{
	"$schema": "../feature.schema.json",
	"id": "db-prisma",
	"name": "Prisma",
	"description": "SQL database integration with Prisma ORM and automatic migrations",
	"dependencies": {
		"@prisma/client": "^6.1.0"
	},
	"devDependencies": {
		"prisma": "^6.1.0"
	},
	"scripts": {
		"db:generate": "prisma generate",
		"db:migrate": "prisma migrate dev",
		"db:studio": "prisma studio"
	},
	"conflicts": ["db-drizzle"],
	"imports": [
		"import { DatabaseService } from \"./db\";"
	],
	"moduleConfig": {
		"providers": ["DatabaseService"]
	}
}
